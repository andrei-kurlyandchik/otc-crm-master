.popup {
  padding 30px
  background #fff
  border-radius 10px
  display none
  &.popup--new-task {
    width 980px
  }
  &.popup--log-issue {
    width 1120px
    overflow-y auto
    overflow-x hidden
    max-height 95%
    margin-top 1.5%
    .btn-wrapper {
      margin-bottom 30px
    }
    .user__table--edit {
      tr:first-child {
        border-top none
      }
    }
    .wrappet-box {
      padding-top: 25px;
      position relative
      &:before {
        content: '';
        width: 110%;
        height: 1px;
        background-color: #cecece;
        top: 0;
        left: -35px;
        position: absolute;
      }
    }
    .form-category {
      width 750px
      .selectric-items ul {
        border-bottom 1px solid #cecece;
      }
    }
  }
  &.popup--complementary-prods {
    width 1120px
    overflow-y auto
    overflow-x hidden
    max-height 95%
    margin-top 1.5%
    padding 30px 0
    .popup__top {
      padding 0 30px
    }
    .space-between {
        display flex
        align-items center
        justify-content space-between
        padding 0 30px
      }
    .prod-found {
      font-size 16px
      line-height 19px
      font-weight 300
      color #3A3A3A
    }
    .popup-making-order-list {
      border-top 1px solid #ccc
      margin-bottom: 40px;
    }
  }
  &.popup--shop-cart {
    padding 0
    width 340px
    top 0
    right 0
    height 100%
    overflow hidden
    border-top-right-radius 0
    border-bottom-right-radius 0
    border-bottom-left-radius 10px
    border-top-left-radius 10px
    .card-box__small {
      width 100%
      height 100%
      display block
    }
    .b-close {
      position absolute
      top 25px
      right 10px
    }
  }

  &.popup--new-notes {
    width 1140px
    .scroll-table {
      max-height 500px
      overflow scroll
    }
  }
  &.popup--request-new-product {
    width 500px
  }
  &.popup--outbound-call {
    width 700px
    .popup__top {
      margin-bottom 0
    }
    .title-h2 {
      margin-bottom 14px
    }
  }
  &.popup--back-in-stock {
    width 700px
    .title-p {
      margin-bottom 30px
    }
    .btn-b {
      min-width: 210px;
    }
  }
  &.popup--add-card {
    width 890px
  }
  &.success{
    background greenLight
  }
  &__info {
    font-weight: 700;
    color #333
  }
  &__row {
    display flex
    align-items center
    justify-content space-between
    margin 0 -10px
  }
  &__col {
    padding 0 10px
  }
  &__top {
    margin-bottom: 25px;
    display flex
    align-items center
    justify-content space-between
  }
  &__close {
    display block
    width: 23px;
    position relative
    height: 23px;
    &:after,
    &:before {
      position: absolute;
      content: '';
      display: block;
      background: #333333;
      width: 3px;
      height: 100%;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      margin: auto;
      transition: background .2s;
    }
    &:after {
      transform: rotate(45deg);
    }
    &:before {
      transform: rotate(-45deg);
    }
  }
  .title-h2 {
    margin-bottom 0
  }
  &__header-btn {
    display flex
    align-items center
    justify-content space-between
    padding-bottom 30px
    border-bottom 1px solid #979797
    margin-bottom 20px
    .toggle-check {
      margin-left 12px
    }
  }
}

.popup--preview {
  width 1170px
  overflow hidden
  max-height 95%
  .popup__close {
    position absolute
    top 30px
    right 30px
  }
  .btn-dd {
    position absolute
    bottom 28px
    left: 50%;
    transform translateX(-50%)
    cursor pointer
  }
}

.preview-wrapper {
  width: 824px
  margin 0 auto
  display: flex;
}

.preview-wrapper--image {
  width 100%
  display flex
  align-items center
  justify-content center
  img {
    max-height 100%
  }
}

.preview-wrapper-slider {
  position absolute
  width 100px
  top 35px
  left 145px
}

.preview-slider {
  width 100%
  border 1px solid #CCCCCC
  margin-bottom 16px
  cursor: pointer
  img {
    width 100%
  }
}

.preview-wrapper-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width 100px
  height 100px
  background: #FFFFFF;
  border: 1px solid #CCCCCC;
  border-radius: 4px;
  cursor pointer
  display flex
  align-items center
  justify-content center
  .arrow {
    border: solid #979797;
    border-width: 0 3px 3px 0;
    display: inline-block;
    padding: 3px;
    width 24px
    height 24px
  }
  &__left {
    left 30px
    .arrow {
      transform: rotate(135deg);
      margin-left: 12px;
    }
  }
  &__right {
    right 30px
    .arrow {
      transform: rotate(-45deg);
      margin-right: 12px;
    }
  }
}

.popup-analogs__top {
  margin-bottom 20px
}

.popup-analogs-tab-header {
  margin-bottom 0
  display flex
  align-items flex-end
  justify-content space-between
  padding 0 30px
  .tabs__caption {
    padding 0
    border none
  }
  .form__label {
    margin-bottom 8px
  }
}

.customer-pays {
  display block
  width 100%
  border-bottom: 1px solid #979797;
  padding-bottom 20px
}

.customer-pays__title {
  font-size 16px
  font-weight 300
  line-height 19px
  color #3A3A3A
}

.customer-pays__price {
  font-size 24px
  font-weight 500
  line-height 26px
  color #0F73E7
}