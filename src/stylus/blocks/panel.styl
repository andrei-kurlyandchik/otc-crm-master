.panel {
  &.panel--tasks {
    .panel__outer {
      padding-bottom 0
    }
  }
  &--user-info {
    .panel__itm {
      border-bottom none
    }
    .panel__outer {
      margin-bottom 30px
    }
  }
  &--user {
    position relative
    .panel__itm {
      padding-top 45px
    }
  }
  &--right {
    display: flex
    justify-content flex-end
    .panel__outer {
      width 50%
    }
  }
  &__outer {
    padding 15px 0
    background #ffffff
    border-radius 20px
    &.panel--active {
      background greenLight
    }
    &.panel--outdated {
      background #fff
    }
    &.panel--active-from {
      background greenLight
    }
    &.panel--locked {
      background yellowLight
    }
  }
  &__row {
    display flex
    margin 0 -15px
  }
  &__col {
    padding 0 15px
  }
  &__col--left {
    width 462px
  }
  &__col--right {
    flex-grow 1
  }
  &__itm {
    padding 15px 30px
    border-bottom 1px solid #d8d8d8
  }
  &__item {
    padding 20px
  }
  &__itm--task {
    padding 0
  }
  .title-h2 {
    margin-bottom 0
  }
  .title-h3 {
    margin-bottom 0
  }
}