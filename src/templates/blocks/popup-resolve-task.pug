.popup.popup--new-task#resolveTask
    .popup__top
        h2.title-h2 Resolve task
        a.popup__close.b-close(href='#')
    .popup__bottom
        form.form
            .form__itm
                .form__row.form__row--center
                    .form__col
                        p Resolution Note (Optional)
                    .form__col.form__col--full
                        label.form__label
                            span.form__ttl Enter the note
                            input.form__inp(type='text' value='' placeholder='New Order Placed')
            .form__btn.form__btn--center
                .form__btn-itm
                    a.btn-b.b-close(href='#') Cancel
                .form__btn-itm
                    a.btn-a.btn-a--small.js-show-popup.b-close(href='#resolve') Resolve
